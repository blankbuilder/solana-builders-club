---
import { siteConfig } from '../config'
---

<header class="flex items-center justify-between animate-fade-in">
  <div class="flex items-center gap-3">
    <img
      src="/logo.svg"
      alt={siteConfig.name}
      width="40"
      height="40"
      class="w-10 h-10 invert"
    />
    <span class="text-sm font-medium">{siteConfig.name}</span>
  </div>
  <button
    data-tally-open="zx7AAk"
    data-tally-emoji-animation="wave"
    class="text-[10px] md:text-xs text-[--color-muted] uppercase tracking-widest bg-transparent border-0 cursor-pointer hover:text-[--color-foreground] transition-colors"
  >
    Join waitlist
  </button>
</header>
